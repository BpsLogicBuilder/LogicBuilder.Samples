<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contoso.XPlatform.Views.MainPageView"
             xmlns:pages="clr-namespace:Contoso.XPlatform.Views">
    <FlyoutPage.Flyout>
        <pages:Flyout x:Name="flyout" />
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage BackgroundColor="{DynamicResource PageBackgroundColor}" BarBackgroundColor="{DynamicResource PageBackgroundColor}" BarTextColor="{DynamicResource PrimaryTextColor}">
            <x:Arguments>
                <pages:MainPageViewDetail />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>